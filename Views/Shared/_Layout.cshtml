<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Admin Panel</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/jquery-{version}.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Admin")"></a>
            @if (Session["AdminId"] != null)
            {
                <div class="navbar-nav ml-auto">
                    <span class="nav-item nav-link">Welcome, @Session["AdminName"]</span>
                    <a class="nav-item nav-link" href="@Url.Action("Logout", "Admin")">Logout</a>
                </div>
            }
        </div>
    </nav>

    <div class="container mt-4">

        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>